<div class="min-h-screen bg-gray-100 py-6 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-900">メモ一覧</h1>
      <%= link_to '新規メモ作成', new_memo_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    </div>

    <div class="space-y-4">
      <% @memos.each do |memo| %>
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex justify-between items-center">
            <h2 class="text-xl font-semibold text-gray-900">
              <%= link_to memo.title, memo_path(memo), class: 'hover:text-blue-600' %>
            </h2>
            <span class="text-sm text-gray-500"><%= memo.created_at.strftime('%Y/%m/%d %H:%M') %></span>
          </div>
          <p class="mt-2 text-gray-600"><%= truncate(memo.content, length: 100) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>